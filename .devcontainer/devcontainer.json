{
  "name": "Multi-Service Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",
  "workspaceFolder": "/workspaces",
  "shutdownAction": "stopCompose",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "containerEnv": {
    "GIT_USER_NAME": "wdwlzh",
    "GIT_USER_EMAIL": "wdwlzh2024@gmail.com"
  },
  "postCreateCommand": "pip install -r backend/requirements.txt && cd frontend && npm install && git config --global user.name \"$GIT_USER_NAME\" && git config --global user.email \"$GIT_USER_EMAIL\""
}
